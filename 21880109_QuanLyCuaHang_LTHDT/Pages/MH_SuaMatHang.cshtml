@page
@model _21880109_QuanLyCuaHang_LTHDT.Pages.MH_SuaMatHangModel
@using Entities

@if (Model.matHang != null)
{
    <form method="post">
        <label for="TenMatHang">Nhap Ten Mat Hang:</label><br />
        <input type="text" name="TenMatHang" value="@Model.matHang.TenMH"><br />
        <label for="ngaySX">Nhap Ngay SX:</label><br />
        <input type="date" name="ngaySX" value="@Model.matHang.NgaySX"><br />
        <label for="handung">Nhap Han Su Dung:</label><br />
        <input type="date" name="handung" value="@Model.matHang.HanDung"><br />
        <label for="ctysx">Nhap Cong Ty San Xuat:</label><br />
        <input type="text" name="ctysx" value="@Model.matHang.CtySX"><br />


        <label for="loaihang">Nhap Loai Hang:</label><br />
        <select name="loaihang" value="">
            @{
                foreach (LoaiHang lh in Model.dsLoaiHang)
                {
                    <option value="@lh.TenLoaiHang">@lh.TenLoaiHang</option>
                }
            }
        </select>
        <br />
        <label for="gia">Nhap Gia:</label><br />
        <input type="text" name="gia" value="@Model.matHang.Gia"><br /><br />

        <input type="submit" value="Sửa">
    </form>
    
}
@Model.Chuoi
